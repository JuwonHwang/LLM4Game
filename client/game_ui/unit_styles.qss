/* 전체 배경 스타일 */
QWidget {
    background-color:#4b4b4b;
    font-size: 12px;
    color: #333;
}

QFrame {
    border-radius: 8px;
    background-color: #dddddd;
    padding: 4px;
}

QLabel {
    font-size: 12px;
    background-color: #ffffff;
    padding: 2px;
    min-width: 80px;
    min-height: 20px;
}


/* 제목 스타일 */
QLabel[title="true"] {
    font-size: 18px;
    font-weight: bold;
    color: #222;
    padding-bottom: 5px;
    border-bottom: 2px solid #ddd;
}